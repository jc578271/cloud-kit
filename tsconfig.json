{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es2017",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": false,
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": "src",
  },
  "compileOnSave": true,
  "include": [
    "src",
    "type.d.ts",
    "**/*.d.ts"
  ]
}